# Database Configuration
DATABASE_URL=postgresql://postgres:postgres123@localhost:5432/scheduling_db
DB_HOST=localhost
DB_PORT=5432
DB_NAME=scheduling_db
DB_USER=postgres
DB_PASSWORD=postgres123

# Redis Configuration
REDIS_URL=redis://localhost:6379

# Application Configuration
NODE_ENV=development
PORT=3000
API_KEY=test-key-123

# Mock Service URLs
CALENDAR_API_URL=http://localhost:3001
CRM_WEBHOOK_URL=http://localhost:3002
AUTH_SERVICE_URL=http://localhost:3003

# Webhook Configuration
WEBHOOK_RETRY_ATTEMPTS=3
WEBHOOK_RETRY_DELAY_MS=1000
WEBHOOK_TIMEOUT_MS=5000

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Scheduling Configuration
DEFAULT_APPOINTMENT_DURATION_MINUTES=30
SLOT_BUFFER_MINUTES=0
SLOT_INTERVAL_MINUTES=15
MAX_BOOKING_DAYS_AHEAD=30
MIN_BOOKING_HOURS_AHEAD=2

# Coach Distribution
ENABLE_PERFORMANCE_BASED_DISTRIBUTION=true
REDISTRIBUTION_THRESHOLD=0.2

# Monitoring (Datadog - for production)
DD_ENABLED=false
DD_API_KEY=your-datadog-api-key
DD_APP_KEY=your-datadog-app-key
DD_SITE=datadoghq.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# AWS Configuration (for production deployment planning)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
EC2_INSTANCE_TYPE=t3.medium

# Feature Flags
ENABLE_RECURRING_APPOINTMENTS=false
ENABLE_APPOINTMENT_REMINDERS=false
ENABLE_DOUBLE_BOOKING_PREVENTION=true